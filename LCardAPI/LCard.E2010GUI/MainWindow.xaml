<controls:MetroWindow x:Class="LCard.E2010GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LCard.E2010GUI"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="{StaticResource MainTitle}" Height="720" Width="1280" 
                      TitleCaps="False" 
                      ResizeMode="CanResizeWithGrip" 
                      GlowBrush="{DynamicResource AccentColorBrush}"
                      Icon="Resources/adc.png">
    <Grid>
        <Button Content="Button" HorizontalAlignment="Left" Margin="32,35,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="136,35,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
    <controls:MetroWindow.Flyouts>
        <controls:FlyoutsControl>
            <controls:Flyout Header="Flyout" Position="Right" Width="200">
            <!-- Your custom content here -->
            </controls:Flyout>
        </controls:FlyoutsControl>
    </controls:MetroWindow.Flyouts>
</controls:MetroWindow>
